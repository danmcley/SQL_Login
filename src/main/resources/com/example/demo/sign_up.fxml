<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.HelloController">
    <children>
        <VBox fx:id="pnLogin" alignment="CENTER" prefHeight="240.0" prefWidth="320.0" spacing="20.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <Label id="Welcome" fx:id="register" alignment="CENTER" prefHeight="46.0" prefWidth="139.0" text="Register">
                <font>
                    <Font name="System Bold" size="31.0" />
                </font>
            </Label>
            <GridPane prefHeight="177.0" prefWidth="286.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" maxWidth="123.0" minWidth="10.0" prefWidth="107.0" />
                    <ColumnConstraints hgrow="SOMETIMES" maxWidth="195.0" minWidth="10.0" prefWidth="173.0" />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints maxHeight="0.0" minHeight="0.0" prefHeight="0.0" />
                    <RowConstraints maxHeight="40.0" minHeight="30.0" prefHeight="40.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints maxHeight="5.0" minHeight="0.0" prefHeight="0.0" vgrow="SOMETIMES" />
               <RowConstraints maxHeight="5.0" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                </rowConstraints>
                <children>
                    <Label id="Username" text="Username:" GridPane.rowIndex="1" />
                    <TextField fx:id="registerUsernameField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                    <Label id="Password" text="Password:" GridPane.rowIndex="2" />
                    <PasswordField fx:id="registerPasswordField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
               <TextField fx:id="registerConfirm" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                    <Label fx:id="Error" GridPane.rowIndex="3">
                        <font>
                            <Font name="System Bold Italic" size="20.0" />
                        </font>
                    </Label>
                    <Button fx:id="btnRegister" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onRegister" prefHeight="25.0" prefWidth="63.0" text="Sign Up" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="4" GridPane.valignment="CENTER" />
               <Label text="Confirm Password" GridPane.rowIndex="3" />
                </children>
            </GridPane>
        </VBox>
    </children>
</AnchorPane>
